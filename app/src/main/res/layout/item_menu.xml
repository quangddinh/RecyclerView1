<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/ivMonan"
        android:scaleType="fitXY"
        android:adjustViewBounds="true"
        tools:src="@mipmap/ic_launcher"
        android:layout_width="150dp"
        android:layout_height="120dp"/>
    <TextView
        android:id="@+id/tvTenMonan"
        android:textStyle="bold"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:textColor="#f20"
        android:layout_toRightOf="@id/ivMonan"
        android:textSize="20sp"
        tools:text="Ten mon an"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_below="@id/tvTenMonan"
        android:id="@+id/tvMotaMonan"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:textColor="#5C6BC0"
        android:layout_toRightOf="@id/ivMonan"
        android:textSize="16sp"
        android:textStyle="italic"
        android:maxLines="2"
        android:ellipsize="end"
        tools:text="Mo ta Mo ta Mo ta Mo ta Mo ta  "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_below="@id/tvMotaMonan"
        android:id="@+id/tvGiaMonan"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:textColor="#E71E61"
        android:layout_toRightOf="@id/ivMonan"
        android:textSize="16sp"
        android:textStyle="italic"
        android:maxLines="1"
        android:ellipsize="end"
        tools:text="$ 2000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <View
        android:background="#000000"
        android:layout_below="@id/ivMonan"
        android:layout_width="match_parent"
        android:layout_height="2dp"/>
</RelativeLayout>
